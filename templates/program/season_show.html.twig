{% extends "base.html.twig" %}

{% block title %}Wild series{% endblock %}

{% block body %}
    <h1>{{ season.description }} de {{ program.title }}</h1>
    <p>{{ program.summary }}</p>
    <h2>Liste des épisodes :</h2>
    <ul>
        {% for episode in season.episodes %}
        <li>
                <a href="{{ path('program_episode_show', { program : program.id, season : season.id, episode : episode.id }) }}">Episode {{ episode.number }} : {{ episode.title }}</a>
        </li>
        {% else %}
            Aucun épisode trouvé.
        {% endfor %}
    </ul>
    <a href="{{ path('program_show', { program : program.id }) }}">
        Retour au program
    </a> 

{% endblock %}
